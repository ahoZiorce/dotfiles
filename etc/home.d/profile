#!/usr/bin/es
#
# profile file
#

. $home/etc/home.d/dirs

XDG_CACHE_HOME=$VAR/cache
XDG_CONFIG_HOME=$ETC
XDG_DATA_HOME=$USR/local/share

path=/usr/lib/ccache/bin $path
path=$BIN/x $path
path=$BIN/wm $path
path=$BIN/wrap $path
path=$BIN $path

path=$path $OPT/cargo/bin
path=$path $OPT/deno/bin

ZDOTDIR=$XDG_CONFIG_HOME/zsh

WALL=$XDG_CACHE_HOME/wall
WALL_BLURRED=$XDG_CACHE_HOME/wall_b.png
SCREENSHOTS=$MED/screenshots

EDITOR=nvim
VISUAL=nvim
BROWSER=firefox
FILE=ranger
TERMINAL=st
READER=zathura
WM=bspwm
WMDIR=/dev/shm/wfs

CCACHE_DIR=$VAR/cache/ccache

TORRENTS_CSV=$OPT/torrents.csv/torrents.csv

NODE_REPL_HISTORY=''

QT_QPA_PLATFORMTHEME=gtk2

BATTERY_CRITICAL=20
LOWBATTERYD_INTERVAL=120

########################
# Paths for decluttering
########################

PULSE_COOKIE=$XDG_CACHE_HOME/pulse/cookie
LESSHISTFILE=-
GOPATH=$OPT/go
PYTHONSTARTUP=$XDG_CONFIG_HOME/pythonrc
XAUTHORITY=$XDG_CACHE_HOME/Xauthority
CARGO_HOME=$OPT/cargo
RUSTUP_HOME=$OPT/rustup
DENO_INSTALL=$OPT/deno
NPM_CONFIG_USERCONFIG=$ETC/npmrc
NPM_CONFIG_GLOBALCONFIG=/etc/npmrc

# Profile has been run
_PROFILE_RUN=yes
