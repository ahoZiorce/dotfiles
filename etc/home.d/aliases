#!/bin/sh

alias a=alias

a ls="ls -a --group-directories-first --color"
a ll="ls -l"
a rr="rm -Rf"
a c=clear
a wd=smartpath
a d=date

a p=echo

a gall="git add -A"
a gcm="git commit -m"
a gs="git status"

a v=nvim

n() {
	echo "$@" >> ~/notes/notes
}

weather() {
	loc="$1"
	[ -z "$loc" ] && loc='?m' ; curl "https://wttr.in/$loc"
}

toclip() {
	cat "$1" | xclip -sel clip -i
}

a fetch=neofetch

. "$XDG_CONFIG_HOME/home.d/landmarks"
