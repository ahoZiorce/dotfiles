#!/bin/sh

alias a=alias

a doas="doas --"

a ls="ls -a --group-directories-first --color"
a ll="ls -l"
a rr="rm -R"
a c=clear
a wd=smartpath

a p=echo

a gall="git add -A"
a gcm="git commit -m"
a gs="git status"
a dotfiles="git --git-dir=$USR/dots --work-tree=$HOME"

a r=ranger

a v=nvim
a dv="doas nvim"

weather() {
	loc="$1"
	[ -z "$loc" ] && loc='?m' ; curl "https://wttr.in/$loc"
}

toclip() {
	cat "$1" | xclip -sel clip -i
}

a fetch=neofetch

a pkg="doas pkg"

. "$XDG_CONFIG_HOME/home.d/landmarks"
