###########
# Misc keys
###########

# Reload sxhkd config
super + Escape
	pkill -USR1 -x sxhkd

# Start terminal
super + Return
	st

# Start the browser
super + shift + f
    $BROWSER

# Start google keep
super + shift + k
    $BROWSER https://keep.google.com

# Start google calendar
super + shift + c
    $BROWSER https://calendar.google.com

# Start gmail
super + shift + g
    $BROWSER https://mail.google.com

# Start github
super + shift + j
	$BROWSER https://github.com

# Open emoji menu
super + shift + e
    emojis

# Lock screen
super + shift + x
	mightylock

# Entire screen
Print
	screensh

# Region screenshot
alt + Print
	screensh -r

# Volume
XF86AudioLowerVolume
	amixer sset 'Master' 2%-

XF86AudioRaiseVolume
	amixer sset 'Master' 2%+

XF86AudioMute
	amixer sset 'Master' toggle

# Brightness
XF86MonBrightnessDown
    li 20 -

XF86MonBrightnessUp
    li 20 +


#######
# bspwm
#######

# Close window
super + q
	bspc node -c

# Restart bspwm
super + alt + r
	bspc wm -r

# Switch between windows
super + {comma,period}
	bspc node -f {next,prev}.local

# Change node flag
super + {t,shift + t, s, f}
	bspc node -f -t {tiled,pseudo_tiled,floating,fullscreen}

# Change desktop
super + {_,shift +}{1,2,3,4,5,6,7,8,9,0}
	bspc {desktop -f,node -f -d} {I,II,III,IV,V,VI,VII,VIII,IX,X}

# Change desktop and switch to it
super + shift + control + {1,2,3,4,5,6,7,8,9,0}
	let (work = {I,II,III,IV,V,VI,VII,VIII,IX,X}) \{ bspc node -f -d $work --follow ; bspc desktop -f $work \}

# Change window
super + {_,shift + control+}{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Expand size
super + alt + {h,j,k,l}
	bspc node -f -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Shrink size
super + alt + shift + {h,j,k,l}
	bspc node -f -z {left 20 0,bottom 0 -20,top 0 20,right -20 0}

# Move a floating window
super + control + {h,j,k,l}
	bspc node -f -v {-20 0,0 20,0 -20,20 0}
