###########
# Misc keys
###########

# Reload sxhkd config
super + Escape
	pkill -USR1 -x sxhkd

# Start terminal
super + Return
	st

# Rofi
super + d
	rofi -show run

# Rofi computer
super + g
	rofi-computer

# Ranger
super + r
	st ranger

# Start the browser
super + shift + f
    $BROWSER

# Start google keep
super + shift + k
    $BROWSER https://keep.google.com

# Start google calendar
super + shift + c
    $BROWSER https://calendar.google.com

# Start gmail
super + shift + g
    $BROWSER https://mail.google.com

# Start github
super + shift + j
	$BROWSER https://github.com

# Open emoji menu
super + shift + e
    emojis

# Lock screen
super + shift + x
	mightylock

# Prevent lock screen on lid close
super + shift + b
    lockpreventswitch

# Entire screen
Print
	screensh

# Region screenshot
alt + Print
	screensh -r

# Infos about now
super + o
	statenotify

# Volume
XF86AudioLowerVolume
	amixer sset 'Master' 2%-

XF86AudioRaiseVolume
	amixer sset 'Master' 2%+

XF86AudioMute
	amixer sset 'Master' toggle

# Brightness
XF86MonBrightnessDown
    xbacklight -dec 10

XF86MonBrightnessUp
    xbacklight -inc 10

# Bluetooth
shift + XF86Tools
    sudo bluetoothctl power off && dunstify -u low 'Bluetooth: off'

XF86Tools
    sudo bluetoothctl power on && dunstify -u low 'Bluetooth: on'

XF86Search
    st sudo bluetoothctl

# Drawing things
super + minus
	draw_term
