#!/bin/sh

scr="$SCREENSHOTS/$(date '+%F-%H%M%S%N').mp4"
s="-s 1920x1080 -i :0.0"
t="V"

if [ "$1" = '-r' ]; then
	s="-s"
	t="Region v"
	eval "$(crud)"
	s="-s \"$W\"x\"$H\" -i :0.0+100,32"
fi

ffmpeg -f x11grab $s -vf fps=23 "$scr" ; notify-send -u low $t"ideo done"

# maim $s -u --format=png /dev/stdout | tee "$scr" | xclip -sel clip -t image/png && notify-send -u low $t"creenshot done" -i "$scr"
